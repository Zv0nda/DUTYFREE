@model AdminViewModel

@{
    ViewData["Title"] = "Tabulka Produktů";
}



    <title>@ViewData["Title"]</title>
    

    <div class="overlay">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow  bg-black opacity-75" style="border-bottom:3px solid white">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><p id="big">DUTY</p><p id="small">FREE</p></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Administration">Produkty</a>
                            </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Products" asp-action="Orders">Objednavky</a>
                                </li>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="text">
            <a style="color:white">Moje objednávky</a>
        </div>
    </div>

<div class="container" style="margin-top: 310px; display: inline-flex">
    <div class="col-md-4" style="margin-left:100px">
        
        <div class="form-group">
            <div class="input-group date" id="datetimepicker6" >  
                <div class="col-md-2" style="width:0px"></div>
                <p style="color:gray; margin-left:200px; margin-top:3px">Od </p><div class="col-md-2" style="width:10px"></div>
                <input type="date" class="form-control-kalendar" style="height: 30px; width: 190px;color:gray" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>

    <div class="col-md-2" style="width:20px; margin-left:50px"></div> 
    <div class="col-md-4" style="margin-left:-50px">

        <div class="form-group">
            <div class="input-group date" id="datetimepicker7">
                <p style="color:gray; margin-left:200px; margin-top:3px">Do </p><div class="col-md-2" style="width:10px"></div>
                <input type="date" class="form-control-kalendar" style="height: 30px; width: 190px;color:gray" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="float-container">
    <div class="float-child blue" style="margin-top:0px">
        <div class="box">
            <table id="myTable">
                <thead>
                    <tr>                        
                        <th id="centerColumn" width="150">Datum</th>
                        <th id="centerColumn" width="100">Čas</th>
                        <th id="centerColumn" width="200">Produkt</th>
                        <th id="centerColumn" width="250">Cena</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>




@section Scripts{
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker6').datetimepicker();
            $('#datetimepicker7').datetimepicker({
                useCurrent: false
            });
            $("#datetimepicker6").on("dp.change", function (e) {
                var selectedDate = new Date(e.date);
                $('#datetimepicker7').data("DateTimePicker").minDate(selectedDate);

                var endDate = new Date($('#datetimepicker7 input').val());
                if (selectedDate > endDate) {
                    $('#datetimepicker7 input').val($('#datetimepicker6 input').val());
                }
            });
            $("#datetimepicker7").on("dp.change", function (e) {
                var selectedDate = new Date(e.date);
                $('#datetimepicker6').data("DateTimePicker").maxDate(selectedDate);

                var startDate = new Date($('#datetimepicker6 input').val());
                if (startDate > selectedDate) {
                    $('#datetimepicker6 input').val($('#datetimepicker7 input').val());
                }
            });
        });

    </script>
}




